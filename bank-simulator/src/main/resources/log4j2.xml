<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
       
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%date %magenta([%thread]) %green(traceId:[%X{traceId}]) %highlight(%-5level) %logger{36}#%line -> %msg%n "/>
        </Console>

        <File name="FileLogger" fileName="logs/bank-simulator.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5level %c{1}:%L - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>
